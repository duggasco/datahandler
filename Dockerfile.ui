# Simple UI for monitoring ETL status
FROM python:3.11-slim

# Install dependencies
RUN pip install --no-cache-dir \
    flask==3.0.3 \
    flask-cors==4.0.1 \
    pandas==2.2.2 \
    plotly==5.22.0

# Create app directory
WORKDIR /app

# Copy UI application
COPY fund_etl_ui.py .

# Create non-root user
RUN useradd -m -s /bin/bash uiuser && \
    chown -R uiuser:uiuser /app

USER uiuser

# Expose port
EXPOSE 8080

# Run the UI
CMD ["python", "fund_etl_ui.py"]
